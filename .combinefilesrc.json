        "entryHeader": [
            "/*********************************************************************************",
            "* Start: ${entryPath}",
            "**********************************************************************************/"
        ],
        "entryFooter": [
            "/*********************************************************************************",
            "* End: ${entryPath}",
            "**********************************************************************************/"
        ]  
    }]
